<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">description</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height: 50px;" src='/product-images/{{this._id}}.jpeg' alt=""></td>
      <td>
          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are u sure you want to delete {{this.Name}}?')">Delete</a>
       
      </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>